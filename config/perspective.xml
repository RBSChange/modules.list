<?xml version="1.0"?>
<perspective>
	<models>
		<model name="modules_generic/rootfolder">
			<children>
				<child model="modules_generic/systemfolder" />
				<child model="modules_generic/folder" />
				<child model="modules_list/editablelist" />
				<child model="modules_list/valuededitablelist" />
			</children>
			<drops>
				<drop model="modules_generic/systemfolder" action="move" />
				<drop model="modules_generic/folder" action="move" />
				<drop model="modules_list/editablelist" action="move" />
				<drop model="modules_list/valuededitablelist" action="move" />
			</drops>
			<columns>
				<column name="nbitems" flex="1"/>
			</columns>
			<contextactions>
				<contextaction name="edit" />			
				<groupactions name="create_">
					<contextaction name="createFolder" />
					<contextaction name="createEditablelist" />
					<contextaction name="createValuededitablelist" />
				</groupactions>
				<contextaction name="openTreeNodeOrder" />
			</contextactions>
		</model>		
		<model name="modules_generic/systemfolder">
			<children>
				<child model="modules_list/staticlist" />
				<child model="modules_list/dynamiclist" />			
				<child model="modules_list/editablelist" />
				<child model="modules_list/valuededitablelist" />
			</children>
			<columns>
				<column name="nbitems" flex="1"/>
				<column name="listid" flex="1"/>
			</columns>
			<contextactions>
				<contextaction name="edit" />
				<contextaction name="openTreeNodeOrder" />
				<contextaction name="openFolder" />
			</contextactions>		
		</model>		
		<model name="modules_generic/folder">
			<children>
				<child model="modules_generic/folder" />
				<child model="modules_list/editablelist" />
				<child model="modules_list/valuededitablelist" />
			</children>
			<drops>
				<drop model="modules_generic/folder" action="move" />
				<drop model="modules_list/editablelist" action="move" />
				<drop model="modules_list/valuededitablelist" action="move" />
			</drops>
			<columns>
				<column name="nbitems" flex="1"/>
			</columns>
			<contextactions>
				<contextaction name="edit" />
				<contextaction name="delete" />
				<groupactions name="create_">
					<contextaction name="createFolder" />
					<contextaction name="createEditablelist" />
					<contextaction name="createValuededitablelist" />
				</groupactions>
				<contextaction name="openTreeNodeOrder" />
				<contextaction name="openFolder" />
			</contextactions>
		</model>		
		<model name="modules_list/editablelist">
			<children>
				<child model="modules_list/item" from="itemdocuments" />
			</children>
			<contextactions>
				<contextaction name="edit" />
				<contextaction name="delete" />
				<contextaction name="createItem" />
			</contextactions>
		</model>		
		<model name="modules_list/item">
			<contextactions>
				<contextaction name="edit" />
				<contextaction name="delete" />
			</contextactions>
		</model>		
		<model name="modules_list/valuededitablelist">
			<children>
				<child model="modules_list/valueditem" from="itemdocuments" />
			</children>
			<contextactions>
				<contextaction name="edit" />
				<contextaction name="delete" />
				<contextaction name="createValueditem" />
			</contextactions>
		</model>
		<model name="modules_list/valueditem">
			<contextactions>
				<contextaction name="edit" />
				<contextaction name="delete" />
			</contextactions>
		</model>		
		<model name="modules_list/staticlist">
			<contextactions>
				<contextaction name="edit" />
			</contextactions>
		</model>
		<model name="modules_list/dynamiclist">
			<contextactions>
				<contextaction name="edit" />
			</contextactions>
		</model>
	</models>	
	<toolbar>
		<toolbarbutton name="edit" />
		<toolbarbutton name="delete" />
	</toolbar>	
	<actions>
		<action name="refresh" single="true" icon="refresh" label="&amp;modules.uixul.bo.actions.Refresh;"/>
		<action name="edit" single="true" permission="Load" icon="edit" label="&amp;modules.uixul.bo.actions.Edit;" />
		<action name="delete" permission="Delete" icon="delete" label="&amp;modules.uixul.bo.actions.Delete;" />
		<action name="openFolder" single="true" icon="open-folder" label="&amp;modules.uixul.bo.actions.OpenFolder;" />
		<action name="openTreeNodeOrder" single="true" permission="Order" icon="sort" label="&amp;modules.uixul.bo.actions.Set-children-order;" />
		<action name="create_" single="true" actions="createFolder,createEditablelist,createValuededitablelist" icon="add" />
		<action name="createEditablelist" single="true" permission="Insert_editablelist" group="create_" icon="add" label="&amp;modules.list.bo.actions.Create-editablelist;" />
		<action name="createValuededitablelist" single="true" permission="Insert_valuededitablelist" group="create_" icon="add" label="&amp;modules.list.bo.actions.Create-Valuededitablelist;" />
		<action name="createItem" single="true" permission="Insert_item" icon="add" label="&amp;modules.list.bo.actions.Create-item;" />
		<action name="createValueditem" single="true" permission="Insert_valueditem" icon="add" label="&amp;modules.list.bo.actions.Create-Valueditem;" />
		<action name="createFolder" single="true" permission="Insert_folder" group="create_" icon="create-folder" label="&amp;modules.uixul.bo.actions.Create-folder;" />
		<action name="move" permission="Move" icon="up_down" label="&amp;modules.uixul.bo.actions.Move;" />
	</actions>
</perspective>
